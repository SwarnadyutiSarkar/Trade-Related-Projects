<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Savings Goal Planner</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        #goal-form, #recommendations { margin-top: 20px; }
        #progress { margin-top: 20px; }
    </style>
</head>
<body>

<h1>Savings Goal Planner</h1>

<div id="goal-form">
    <label for="goalAmount">Savings Goal Amount:</label>
    <input type="number" id="goalAmount" required>
    <br>
    <label for="currentSavings">Current Savings Amount:</label>
    <input type="number" id="currentSavings" required>
    <br>
    <button id="setGoal">Set Goal</button>
</div>

<div id="progress" style="display: none;">
    <h2>Progress</h2>
    <p id="progressText"></p>
    <p>Amount Needed: <span id="amountNeeded"></span></p>
</div>

<div id="recommendations" style="display: none;">
    <h2>Recommendations</h2>
    <p id="spendingRecommendation"></p>
</div>

<script>
document.getElementById('setGoal').addEventListener('click', function() {
    const goalAmount = parseFloat(document.getElementById('goalAmount').value);
    const currentSavings = parseFloat(document.getElementById('currentSavings').value);

    if (isNaN(goalAmount) || isNaN(currentSavings)) {
        alert("Please enter valid amounts.");
        return;
    }

    const amountNeeded = goalAmount - currentSavings;
    document.getElementById('progressText').innerText = `You are saving toward a goal of $${goalAmount.toFixed(2)}.`;
    document.getElementById('amountNeeded').innerText = `$${amountNeeded.toFixed(2)}`;
    document.getElementById('progress').style.display = 'block';

    // Provide spending recommendations
    if (amountNeeded > 0) {
        let recommendation;
        if (amountNeeded > 1000) {
            recommendation = "Consider cutting down on luxury expenses like dining out or subscriptions.";
        } else if (amountNeeded > 500) {
            recommendation = "You might want to set a monthly budget to monitor your spending.";
        } else {
            recommendation = "Great job! You're almost there. Just a little more savings!";
        }
        document.getElementById('spendingRecommendation').innerText = recommendation;
        document.getElementById('recommendations').style.display = 'block';
    } else {
        document.getElementById('spendingRecommendation').innerText = "Congratulations! You've reached your savings goal!";
        document.getElementById('recommendations').style.display = 'block';
    }
});
</script>

</body>
</html>
